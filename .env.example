# Server Configuration
ENV=development

# Port to access Trove on your host machine
TROVE_PORT=8080

# Database Configuration
DB_TYPE=postgres                    # Options: sqlite, postgres
DB_HOST=postgres 
DB_PORT=5432
DB_NAME=trove
DB_USER=trove
DB_PASSWORD=trove_dev_password

# SQLite Configuration (if DB_TYPE=sqlite)
# DB_PATH=./data/trove.db

# Storage Configuration
STORAGE_BACKEND=disk                # Options: disk, memory, s3
STORAGE_PATH=./data/files           # For disk backend
# TEMP_DIR=/tmp                     # Temp directory for uploads (defaults to system temp)

# S3 Configuration (if STORAGE_BACKEND=s3)
# Uses AWS SDK defaults for credentials and endpoint:
#   - AWS_ACCESS_KEY_ID, AWS_SECRET_ACCESS_KEY (credentials)
#   - AWS_REGION (region)
#   - AWS_ENDPOINT_URL (custom endpoint for S3-compatible services)
#   - ~/.aws/credentials and ~/.aws/config (shared config)
#   - IAM roles (EC2/ECS/Lambda)
S3_BUCKET=trove                     # Required: bucket name
S3_USE_PATH_STYLE=false             # Set to true for MinIO/rustfs

DEFAULT_USER_QUOTA=10G              # Supports: B, K/KB, M/MB, G/GB, T/TB or raw bytes
MAX_UPLOAD_SIZE=500M                # Supports: B, K/KB, M/MB, G/GB, T/TB or raw bytes

# Security
SESSION_SECRET=change_this_to_a_random_secret_in_production
CSRF_ENABLED=true

ENABLE_REGISTRATION=true
ENABLE_FILE_DEDUPLICATION=true

# Advanced (defaults are sensible, only change if needed)
# PORT=8080                         # Container internal port (default: 8080)
# HOST=0.0.0.0                      # Container bind address (default: 0.0.0.0)
# SESSION_DURATION=168h             # Session expiry (default: 7 days)
# BCRYPT_COST=10                    # Password hashing cost (default: 10, range: 10-14)
